{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "esnext"
      ],
      "baseUrl": "./src",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "jsx": "react",
      "plugins": [
        { "name": "typescript-plugin-css-modules" }
      ]
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
